<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
     <File name="ReEntrantLockTestFile" fileName="target/ReEntrantLockTest.log">
     	<PatternLayout>
        	<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
	 </File>
  </Appenders>
  <Loggers>
    <Logger name="com.pack.java.concurrency.ReEntrantLockTest" level="DEBUG" additivity="false">
      <AppenderRef ref="ReEntrantLockTestFile"/>
    </Logger>
    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>